{% extends 'back.html.twig' %}

{% block title %}Edit Categorie{% endblock %}


{% block content %}
    <h1>Categories</h1>
    <div class="btn-group btn-group-lg" role="group" aria-label="Basic example">
        <button onclick="window.location.href='{{ path('categorie_back_suggestion')}}'" type="button" class="btn btn-primary">Suggestion list</button>
        <button onclick="window.location.href='{{ path('categorie_back_index')}}'" type="button" class="btn btn-primary">Categories list</button>
        <button  onclick="window.location.href='{{ path('categorie_back_new')}}'" type="button" class="btn btn-primary">Add New</button>
    </div>
    <div id="content-page" class="content-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-11">
                    <div class="iq-card" >
                        <div class="iq-card-header d-flex justify-content-between">
                            <div class="iq-header-title">
                                <h4 class="card-title">Edit my Event</h4>
                            </div>
                        </div>
                        <div class="iq-card-body">
                            <h1>Edit Categorie</h1>

                            {{ include('categorie/_form.html.twig', {'button_label': 'Update'}) }}

                            <a href="{{ path('categorie_back_index') }}">back to list</a>

                            {{ include('categorie/back_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>



{% endblock %}
